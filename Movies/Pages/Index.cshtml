@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
    <div class="content">
        <div class="results">


            <h1>Movies</h1>
            @foreach (Movie movie in Model.Movies)
            {
                <div class="movie-entry">
                    <h2>@movie.Title (@movie.Year)</h2>
                    <p>@movie.Title (@movie.Year)</p>
                    <div class="reviews">
                        <div>
                            Rotten Tomatoes
                            <h3>
                                @movie.Rotten_Tomatoes_Rating
                            </h3>
                        </div>
                        <div>
                            MPAA
                            <h3>
                                @movie.MPAA_Rating
                            </h3>
                        </div>
                    </div>
                </div>
            }
            </div>

        <form method="post">
            <input type="text" name="search" value="@Model.search"/>
            <input type="submit" value="Search" />
            <input type="reset" value="Clear"/>
            <div class="checkbox-list">
                <label>
                    <input type="checkbox" name="rating" value="G" checked="@Model.mpaa.Contains("G")" />
                    Rated G
                </label>
                <label>
                    <input type="checkbox" name="rating" value="PG" checked="@Model.mpaa.Contains("PG")" />
                    Rated PG
                </label>
                <label>
                    <input type="checkbox" name="rating" value="PG-13" checked="@Model.mpaa.Contains("PG-13")" />
                    Rated PG-13
                </label>
                <label>
                    <input type="checkbox" name="rating" value="R" checked="@Model.mpaa.Contains("R")" />
                    Rated R
                </label>
                <label>
                    <input type="checkbox" name="rating" value="NC-17" checked="@Model.mpaa.Contains("NC-17")" />
                    Rated NC-17
                </label>

                <h4>Review Scores</h4>
                <label>
                    Maximum IMDB Rating:
                    <input type="number" min="0" max="10" step="0.1" name="maxIMDB" value="@Model.minIMDB"/>
                </label>
                <label>
                    Minimum IMDB Rating:
                    <input type="number" min="0" max="10" step="0.1" name="minIMDB" value="@Model.maxIMDB"/>
                </label>

                <h3>Sort By</h3>
                <select>
                    <option default>None</option>
                    <option value="title" selected="@(Model.sort == "title")">Title</option>
                    <option value="director" selected="@(Model.sort == "director")">Director</option>
                    <option value="mpaa" selected="@(Model.sort == "mpaa")">MPAA Rating</option>
                   
                    <option value="imdb" selected="@(Model.sort == "imdb")">IMDB Rating</option>
                    <option value="rt" selected="@(Model.sort == "rt")">Rotten Tomatoes Rating</option>

                </select>
            </div>
        </form>
        
        
                
                
          
        

</div>

